{
	"compilerOptions": {
		"target": "ES2015",
		"module": "CommonJS",
		"declaration": true,
		"outDir": "dist",
		"resolveJsonModule": true,
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"isolatedModules": true,
		"lib": ["es2019"]
	}
}
